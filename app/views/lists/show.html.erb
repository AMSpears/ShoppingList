<div class="container">
  <section>
    <div class ='home-icon'>
      <%= link_to lists_path do %>
        <i class="fa fa-home" aria-hidden="true"></i>
      <% end %>
    </div>

    <h2 class= "lists-title"><%= @list.title %>
      <%= link_to new_list_item_path(@list) do %>
        <i class="fa fa-cart-plus" aria-hidden="true"> </i>
      <%end%>
    </h2>

      <% @list.items.all.each do |item| %>
        <div class="item_name">
          <%= item.name %> :
        </div>

        <div class = "item_details">
          <%= item.category %> <br>  <%= item.quantity %> <br> <%= item.note %> <br>
        </div>

          <%= link_to edit_list_item_path(@list, item), :class => "item_edit" do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>

          <%= link_to list_item_path(@list, item), method: :delete, :class => "item_delete" do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>

        <% end %>
      <hr>
        <% if @list.user == current_user %>
          <%= link_to "&#9997;".html_safe, edit_list_path(@list), :class => "list_edit" %>
          <%= link_to "&#10060;".html_safe, list_path(@list), method: :delete, :class => "list_delete" %>
        <%end %>
  </section>
</div>
