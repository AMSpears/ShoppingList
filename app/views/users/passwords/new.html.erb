<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div id= "error-msgs"> <%= devise_error_messages! %></div>
    <h2>Forgot your password?</h2>
      <div class="field">
         <%= f.label :email %><br />
         <%= f.email_field :email, autofocus: true %>
      </div>

  <div class="action">
    <%= f.submit "Send me reset password instructions" :class => "button-submit" %>
  </div>
  <% end %>
  </div>
<%= render "users/shared/links" %>
