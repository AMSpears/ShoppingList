<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div id= "error-msgs">  <%= devise_error_messages! %> </div>
    <h2>Sign up</h2>

    <div ><%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "e.g. John Doe"%></div>

    <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "e.g. user@email.com" %></div>

    <div><%= f.label :password %>

        <%= f.password_field :password, autocomplete: "off", placeholder: "8 minimun characters" %></div>

    <div><%= f.label :confirm_password %>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "8 minimun characters" %></div>

    <div class= "action"><%= f.submit "Sign up", :class => "button-submit" %></div>
  <% end %>

</div>
